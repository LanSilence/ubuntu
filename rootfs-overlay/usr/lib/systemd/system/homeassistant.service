[Unit]
Description=Home Assistant
After=haos-image.mount

[Service]
Type=simple
WorkingDirectory=/homeassistant
Environment="PATH=/homeassistant/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=python3.13 -m homeassistant --config /mnt/data/.homeassistant
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target